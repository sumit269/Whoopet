<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat" />

    <style name="FullscreenTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:textViewStyle">@style/WTextViewStyle</item>
        <item name="android:buttonStyle">@style/WButtonStyle</item>
        <item name="metaButtonBarStyle">@style/BottomBar</item>
    </style>

    <style name="WTextViewStyle">

    </style>

    <style name="PrimatyTextViewTitleStyle" parent="WTextViewStyle">
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:textSize">@dimen/primary_title_text_size</item>
    </style>

    <style name="PrimatyTextViewSubTitleStyle" parent="WTextViewStyle">
        <item name="android:textSize">@dimen/primary_subtitle_text_size</item>
    </style>

    <style name="SecondaryTextViewStyle" parent="WTextViewStyle">
        <item name="android:textColor">@color/secondary_text_color</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
    </style>

    <style name="BottomBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>


    <style name="EditTextStyle" />

</resources>
