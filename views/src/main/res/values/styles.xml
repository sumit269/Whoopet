<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="WrapContentStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SectionContainerLayoutStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/container_padding</item>
    </style>

    <style name="InnerSectionContainerLayoutStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">@dimen/inner_container_padding</item>
        <item name="android:paddingBottom">@dimen/inner_container_padding</item>
        <item name="android:layout_marginTop">@dimen/section_margin</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="WButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/wbutton_background</item>
        <item name="android:minWidth">@dimen/button_min_width</item>
        <item name="android:paddingLeft">@dimen/button_internal_padding</item>
        <item name="android:paddingRight">@dimen/button_internal_padding</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <style name="PrimaryButtonStyle" parent="WButtonStyle">
        <item name="android:background">@color/primary_button_color</item>
        <item name="android:textColor">@color/primary_button_text_color</item>
    </style>

    <style name="SecondaryButtonStyle" parent="WButtonStyle">
        <item name="android:background">@color/secondary_button_color</item>
        <item name="android:textColor">@color/secondary_button_text_color</item>
    </style>

    <style name="NavigationMenuTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/navigation_item_text_size</item>
        <item name="android:layout_gravity">center_vertical|start</item>
        <item name="android:paddingLeft">72dp</item>
    </style>

</resources>